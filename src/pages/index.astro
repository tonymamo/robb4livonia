---
import { Image } from "@astrojs/image/components"
import BaseLayout from "../layouts/BaseLayout.astro"

import Grid from "../components/Grid.astro"
import Hero from "../components/Hero.astro"
import Icon from "../components/Icon.astro"

import ContactCTA from "../components/ContactCTA.astro"

import Platform from "../components/Platform.astro"

const endorsements = [
  {
    name: "Jim Jolly",
    image: "/assets/endorsements/jimjolly.jpeg",
    title: "Livonia City Council President",
  },
  {
    name: "Laura Toy",
    image: "/assets/endorsements/lauratoy.jpeg",
    title: "Livonia City Council Vice President",
  },
  {
    name: "Dayna Polehanki",
    image: "/assets/endorsements/daynapolehanki.jpeg",
    title: "State Senator",
  },
  {
    name: "Matt Koleszar",
    image: "/assets/endorsements/mattkoleszar.jpeg",
    title: "State Representative",
  },
  {
    name: "Mark Johnson",
    image: "/assets/endorsements/markjohnson.jpeg",
    title: "President, Livonia Public Schools Board",
  },
  {
    name: "Karen Bradford",
    image: "/assets/endorsements/karenbradford.jpeg",
    title: "Vice President, Livonia Public Schools Board",
  },
  {
    name: "Madeline Acosta",
    image: "/assets/endorsements/madelineacosta.jpeg",
    title: "Livonia Public Schools Board of Trustees",
  },
  {
    name: "Colleen Burton",
    image: "/assets/endorsements/colleenburton.jpeg",
    title: "Livonia Public Schools Board of Trustees",
  },
  {
    name: "Liz Jarvis",
    image: "/assets/endorsements/lizjarvis.jpeg",
    title: "Livonia Public Schools Board of Trustees",
  },
  {
    name: "Timothy Klisz",
    image: "/assets/endorsements/timothyklisz.jpeg",
    title: "Zoning Board of Appeals",
  },
  {
    name: "Tamara Oliviero",
    image: "/assets/endorsements/tamaraoliviero.jpeg",
    title: "Zoning Board of Appeals",
  },
  {
    name: "AFSCME American Federation of State",
    image: "/assets/endorsements/afscmelogo.jpeg",
    title: "County and Municipal Employees Council 25",
  },
  {
    name: "Bricklayers & Allied Craftworkers Union",
    image: "/assets/endorsements/bricklayerslogo.jpeg",
    title: "Local 2",
  },
]
---

<BaseLayout>
  <div class="stack gap-20 lg:gap-48">
    <div class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <div>
          <Hero
            title="Hello, my name is Robb Drzewicki."
            tagline="I'm running for Livonia City Council. Join me in helping shape the future of our community."
            align="start"
          />
          <a
            href="/about/"
            rel="prefetch"
            class="inline-block rounded-full mt-4 px-8 py-4 focus:ring bg-[var(--accent-regular)] text-white hover:bg-[var(--accent-regular)]"
            >Learn more about Robb <Icon icon="arrow-right" size="1.2em" /></a
          >
        </div>

        <Image
          alt="Robb Drzewicki and his family"
          width={456}
          height={608}
          src="/assets/fam1.jpg"
          format="webp"
        />
      </header>

      <main class="wrapper stack gap-20 lg:gap-48">
        <Platform location="homepage" />

        <section class="section with-background bg-variant">
          <header class="section-header stack gap-2 lg:gap-4">
            <h3>Endorsements</h3>
            <p>I'm proud to have the support of these great people.</p>
          </header>

          <div class="gallery">
            <Grid variant="small">
              {
                endorsements.map((person) => (
                  <li class="mention-card">
                    <Image
                      width={64}
                      height={64}
                      format="webp"
                      src={person.image}
                      alt={person.name}
                      class="w-16 h-16 rounded-full mb-2"
                    />
                    <p class="font-bold text-lg">{person.name}</p>
                    <p>
                      <em>{person.title}</em>
                    </p>
                  </li>
                ))
              }
            </Grid>
          </div>
        </section>

        <section class="section with-background">
          <header class="section-header stack gap-2 lg:gap-4">
            <h3>Get Involved</h3>
            <p>
              Interested in helping out? Learn more about how you can help,
              whether that's hosting a party, attending an event, putting a sign
              in your yard, or texting fellow Livonians to spread the word.
            </p>
            <div>
              <a
                href="/help/"
                rel="prefetch"
                class="inline-block rounded-full mt-4 px-8 mr-4 py-4 focus:ring bg-[var(--accent-regular)] text-white hover:bg-[var(--accent-regular)]"
                >Help <Icon icon="arrow-right" size="1.2em" /></a
              >
              <a
                href="/donate/"
                rel="prefetch"
                class="inline-block rounded-full mt-4 px-8 py-4 focus:ring bg-[var(--accent-light)] text-white hover:bg-[var(--accent-light)]"
                >Donate <Icon icon="arrow-right" size="1.2em" /></a
              >
            </div>
          </header>
        </section>
      </main>
    </div>

    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .roles {
    display: none;
  }

  .hero img {
    aspect-ratio: 5 / 4;
    object-fit: cover;
    object-position: top;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  @media (min-width: 50em) {
    .hero {
      display: grid;
      grid-template-columns: 6fr 4fr;
      padding-inline: 2.5rem;
      gap: 3.75rem;
    }

    .roles {
      margin-top: 0.5rem;
      display: flex;
      gap: 0.5rem;
    }

    .hero img {
      aspect-ratio: 3 / 4;
      border-radius: 4.5rem;
      object-fit: cover;
    }
  }

  /* ====================================================== */

  .section {
    display: grid;
    gap: 2rem;
  }

  .with-background {
    position: relative;
  }

  .with-background::before {
    --hero-bg: var(--bg-image-subtle-2);

    content: "";
    position: absolute;
    pointer-events: none;
    left: 50%;
    width: 100vw;
    aspect-ratio: calc(2.25 / var(--bg-scale));
    top: 0;
    transform: translateY(-75%) translateX(-50%);
    background: var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
      var(--gray-999);
    background-blend-mode: normal;
    mix-blend-mode: var(--bg-blend-mode);
    z-index: -1;
  }

  .with-background.bg-variant::before {
    --hero-bg: var(--bg-image-subtle-1);
  }

  .section-header {
    justify-self: center;
    text-align: center;
    max-width: 50ch;
    font-size: var(--text-md);
    color: var(--gray-300);
  }

  .section-header h3 {
    font-size: var(--text-2xl);
  }

  @media (min-width: 50em) {
    .section {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas: "header header header header" "gallery gallery gallery gallery";
      gap: 5rem;
    }

    .section.with-cta {
      grid-template-areas: "header header header cta" "gallery gallery gallery gallery";
    }

    .section-header {
      grid-area: header;
      font-size: var(--text-lg);
    }

    .section-header h3 {
      font-size: var(--text-4xl);
    }

    .with-cta .section-header {
      justify-self: flex-start;
      text-align: left;
    }

    .gallery {
      grid-area: gallery;
    }

    .cta {
      grid-area: cta;
    }
  }

  /* ====================================================== */

  .mention-card {
    display: flex;
    height: 20rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    border: 1px solid var(--gray-800);
    border-radius: 1.5rem;
    color: var(--gray-300);
    background: var(--gradient-subtle);
    box-shadow: var(--shadow-sm);
    flex-direction: column;
    padding: 2rem;
  }

  @media (min-width: 50em) {
    .mention-card {
      border-radius: 1.5rem;
      height: 15rem;
    }
  }
</style>
